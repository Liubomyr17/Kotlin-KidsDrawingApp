<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout tools:context=".MainActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <!--TODO(Step 1 - Adding Image as Background to the DrawingView)-->


    <!--Here we have added list of points1. We have added an additional layout for DrawingView as Frame Layout.2. We have done some designing improvements as compared to previous versionas added all the ConstraintLayout attributes to FrameLayout instead of DrawingView.3. We have added an image view in the frame layout to set an background to the drawing view.4. A Static image is added in the drawable folder.5. The image is set to the image view which is added with scale type.6. Added the white color to drawing view with opacity 50 so the background image will be visible.-->

    <!--START-->

    <FrameLayout android:layout_height="0dp" android:layout_width="0dp" app:layout_constraintTop_toTopOf="parent" app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintBottom_toTopOf="@+id/ll_paint_colors" android:padding="1dp" android:background="@drawable/background_drawing_view_layout" android:layout_margin="5dp" android:id="@+id/fl_drawing_view_container">

    <!-- In FrameLayout the component which areadded below are in foreground and added above are in Background.-->

    <ImageView android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/iv_background" android:src="@drawable/image" android:scaleType="centerCrop" android:contentDescription="image"/>

    <com.kidsdrawingapp.DrawingView android:layout_height="match_parent" android:layout_width="match_parent" android:background="#80FFFFFF" android:id="@+id/drawing_view"/>

</FrameLayout>

    <!--END-->


    <!--TODO(Step 2 - We have updated the attribute 'app:layout_constraintTop_toBottomOf' in ll_paint_colors as "@id/fl_drawing_view_container" instead of "@id/drawing_view".)-->


    <!-- Color pallet_normal -->



    <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintBottom_toTopOf="@id/ll_action_buttons" android:id="@+id/ll_paint_colors" app:layout_constraintTop_toBottomOf="@id/fl_drawing_view_container" android:orientation="horizontal">

    <ImageButton android:layout_height="25dp" android:layout_width="25dp" android:background="@color/skin" android:layout_margin="2dp" android:src="@drawable/pallet_normal" android:contentDescription="image" android:tag="@color/skin" android:onClick="paintClicked"/>

    <ImageButton android:layout_height="25dp" android:layout_width="25dp" android:background="@color/black" android:layout_margin="2dp" android:src="@drawable/pallet_normal" android:contentDescription="image" android:tag="@color/black" android:onClick="paintClicked"/>

    <ImageButton android:layout_height="25dp" android:layout_width="25dp" android:background="@color/red" android:layout_margin="2dp" android:src="@drawable/pallet_normal" android:contentDescription="image" android:tag="@color/red" android:onClick="paintClicked"/>

    <ImageButton android:layout_height="25dp" android:layout_width="25dp" android:background="@color/green" android:layout_margin="2dp" android:src="@drawable/pallet_normal" android:contentDescription="image" android:tag="@color/green" android:onClick="paintClicked"/>

    <ImageButton android:layout_height="25dp" android:layout_width="25dp" android:background="@color/blue" android:layout_margin="2dp" android:src="@drawable/pallet_normal" android:contentDescription="image" android:tag="@color/blue" android:onClick="paintClicked"/>

    <ImageButton android:layout_height="25dp" android:layout_width="25dp" android:background="@color/yellow" android:layout_margin="2dp" android:src="@drawable/pallet_normal" android:contentDescription="image" android:tag="@color/yellow" android:onClick="paintClicked"/>

    <ImageButton android:layout_height="25dp" android:layout_width="25dp" android:background="@color/lollipop" android:layout_margin="2dp" android:src="@drawable/pallet_normal" android:contentDescription="image" android:tag="@color/lollipop" android:onClick="paintClicked"/>

    <ImageButton android:layout_height="25dp" android:layout_width="25dp" android:background="@color/random" android:layout_margin="2dp" android:src="@drawable/pallet_normal" android:contentDescription="image" android:tag="@color/random" android:onClick="paintClicked"/>

</LinearLayout>

    <LinearLayout
        android:id="@+id/ll_action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageButton
            android:id="@+id/ib_gallery"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@drawable/ic_gallery"
            android:contentDescription="gallery image"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            />
        <ImageButton
            android:id="@+id/ib_brush"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@drawable/ic_brush"
            android:contentDescription="brush image"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            />


    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>